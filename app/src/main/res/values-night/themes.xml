<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Booster" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primarySecondaryColor</item>
        <item name="colorOnPrimary">@color/textColor</item>
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primarySecondaryColor</item>
        <item name="colorOnSecondary">@color/backgroundColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>
        <item name="colorAccent">@color/primaryColor</item>

        <item name="primaryColor">@color/primaryColor</item>
        <item name="secondaryColor">@color/primarySecondaryColor</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="backgroundSecondaryColor">@color/backgroundSecondaryColor</item>
        <item name="textColor" >@color/textColor</item>
        <item name="textSecondaryColor" >@color/textSecondaryColor</item>
        <item name="textDisabledColor" >@color/textDisabledColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="actionBarStyle">@style/AppTheme.AppBar</item>
        <item name="android:textColorTertiary">@color/textColor</item>
    </style>

    <style name="ScrollbarStyle">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?backgroundSecondaryColor</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">8dp</item>
        <item name="rippleColor">?colorPrimary</item>
        <item name="android:typeface">normal</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.AppBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="titleTextStyle">@style/AppTheme.AppBar.TextStyle</item>
    </style>
    <style name="AppTheme.AppBar.TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FullScreenDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
</resources>